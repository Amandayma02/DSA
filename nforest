public class pattern2
{
    public void pattern()
    {
        int i ,j;
        for (i = 1; i <= 5; i++) {
            // inner loop to handle number of columns
            for (j = 1; j <= i; j++) {
                // printing column values upto the row
                // value.
                System.out.print(j + " ");
            }

            // print new line for each row
            System.out.println();
        }
    }

    public static void main(String[] args) {
        pattern2 p = new pattern2();
        p.pattern();
    }
}
